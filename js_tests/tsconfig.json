{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["**/*.test.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
